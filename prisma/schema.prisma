generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String
  passwordHash String
  reviews      BookReview[]
}

model Book {
  id        String       @id @default(cuid())
  title     String
  author    String
  genre     String
  status    String       // "read" | "want_to_read"
  rating    Float?       // legacy: optional 0.5-5 from original adder
  addedBy   String
  createdAt DateTime     @default(now())
  reviews   BookReview[]
}

model BookReview {
  id        String    @id @default(cuid())
  userId    String
  bookId    String
  rating    Float?    // 0.5 to 5 in 0.5 steps (half stars)
  notes     String?
  hidden     Boolean   @default(false) // when true, review is not shown on the page (data kept)
  wantToRead Boolean   @default(false) // when true, user has marked this book as want to read
  createdAt  DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
}
